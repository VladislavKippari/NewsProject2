@model News.Models.CategoryViewModel
@{
    ViewData["Title"] = "Create Article";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        input[type=submit] {
            color: blue;
        }

        input[type=file] {
            margin-top: 200px;
            color: blue;
        }

        content {
            padding-left: 400px;
            padding-right: 400px;
            justify-content: center;
        }
        .form-group {
            color: blue;
        }
       
    </style>
</head>

<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div  class id="container" class="col-sm-3 col-lg-8">
        <h1>  <b>Add new Article </b> </h1>
        <div class="form-group">
           <input type="file"  name="user_image" id="user_image" class="btn-default"/>
        </div>
        <label>Title</label>
        <input type="text" name="testTitle"/>

        <div class="form-group">
            <label>Text</label>
            <textarea class="form-control" type="text" name="Text" rows="4" cols="20">Text</textarea>
        </div>
        <div> @Html.DropDownListFor(n => n.SelectedCategoryId, Model.CategoryName, "Please select Category")</div>
        <div class="form-group">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
</form>
