@model News.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="col-md-6 mx-auto">
    <div class="card rounded-0">
        <div class="card-header">
            <h3 class="mb-0">Registration</h3>
        </div>
        <div class="card-body">
            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div>
                    <div>
                        <label asp-for="FirstName">Firstname</label><br />
                        <input type="text" asp-for="FirstName" class="form-control form-control-lg rounded-0" required="" />
                        <span asp-validation-for="FirstName" />
                    </div>
                    <div>
                        <label asp-for="LastName">lastname</label><br />
                        <input type="text" asp-for="LastName" class="form-control form-control-lg rounded-0" required="" />
                        <span asp-validation-for="LastName" />
                    </div>
                    <div>
                        <label asp-for="Email">Email</label><br />
                        <input type="email" asp-for="Email" class="form-control form-control-lg rounded-0" required="" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <label asp-for="Password">Password</label><br />
                        <input asp-for="Password" class="form-control form-control-lg rounded-0" required="" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <label asp-for="ConfirmPassword">Confirm password</label><br />
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-0" required="" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div><br />
                    @if ( this.User.IsInRole("Admin"))
                    {
                    <div>
                        <label asp-for="RoleName">Role: </label> @Html.DropDownListFor(n => n.RoleId, Model.RoleName, "Please select Role")<br />

                    </div><br />
                        
                    }
                    <div>
                        <input type="submit" class="btn btn-success btn-lg float-right" value="Register" />
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>