@using System.Security.Claims

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h3 class="text-info ">@ViewBag.UserAuth.FirstName @ViewBag.UserAuth.LastName</h3>

    @if (ViewData["Role"].ToString() == "Admin")
    {
        <a class="btn btn-primary" role="button" href="@Url.Action("Admin", "Home")">Admin</a>
       
    

    }
    <h2>Claims</h2>
    <table class="table table-striped">
        <tr>
            <th>Subject</th>
            <th>Issuer</th>
            <th>Type</th>
            <th>Value</th>
        </tr>
        @foreach (Claim claim in User.Claims)
        {
            <tr>
                <td>@claim.Subject.Name</td>
                <td>@claim.Issuer</td>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
</div>

